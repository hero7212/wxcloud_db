<van-cell-group>
  <van-cell title="title" value="{{product.title}}" />
  <van-cell title="price" value="{{product.price}}" />
  <van-cell title="tag" value="{{product.tags}}" />
  <van-cell title="color" value="{{product.color}}" border="{{ false }}" />
</van-cell-group>
<van-button type="primary" bind:click="addtag">添加 tag</van-button>
<van-button type="warning" bind:click="deltag">删除 tag</van-button>
<van-button type="danger" bind:click="update">update</van-button>
<van-button type="primary" bind:click="batchUpdate">batchUpdate</van-button>
<van-button type="danger" bind:click="delete">delete</van-button>
<van-button type="danger" bind:click="batchDelete">batchDelete</van-button>